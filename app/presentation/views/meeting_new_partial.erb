<div id="newAppointmentModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">New Appointment</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form role="form" action="/appointments" method="post" id="new-appointment-form">
          <div class="form-group">
            <label for="name_input">Appointment Name:</label>
            <input type="text" name="name" id="name_input" class="form-control" placeholder="name is required">
          </div>
          <div class="form-group">
            <label for="repo_url_input">Appointment Repo URL:</label>
            <input type="text" name="repo_url" id="repo_url_input" class="form-control" placeholder="must be a URL: https://github.com/me/example">
          </div>
          <button type="submit" id="registration-form-submit" class="btn btn-primary">Create</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </form>
      </div>
    </div>
  </div>
</div>
