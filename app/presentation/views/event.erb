<body class="m-0 font-sans text-base antialiased font-normal leading-default bg-gray-50 text-slate-500">
  <main class="ease-soft-in-out xl:ml-68.5 relative h-full max-h-screen rounded-xl transition-all duration-200">

    <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
      <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold mb-4 text-blue-600">
          Event name: <%= event.title %>
        </h2>
        <div class="flex space-x-4 ml-auto">
          <%if event.is_flexible%>
            <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-lg font-semibold text-green-700">Flexible</span>
          <%end%>
          <%if event.is_google%>
            <span class="inline-flex items-center rounded-md bg-purple-50 px-2 py-1 text-lg font-semibold text-purple-700">Regular</span>
          <%end%>
        </div>
      </div>

      <div class="grid grid-cols-3 gap-4 mb-4">
        <div class="flex items-center col-span-1">
          <dt class="flex items-center space-x-2 text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            <span>Start DateTime:</span>
          </dt>
        </div>
        <div class="col-span-2">
          <dd class="text-gray-900"><%= event.start_datetime %></dd>
        </div>

        <div class="flex items-center col-span-1">
          <dt class="flex items-center space-x-2 text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            <span>End DateTime:</span>
          </dt>
        </div>
        <div class="col-span-2">
          <dd class="text-gray-900"><%= event.end_datetime %></dd>
        </div>

        <div class="flex items-center col-span-1">
          <dt class="flex items-center space-x-2 text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
            </svg>
            <span>Location:</span>
          </dt>
        </div>
        <div class="col-span-2">
          <dd class="text-gray-900">
            <%if event.location.nil? %>
              <span>No location</span>
            <%else%>
              <span><%= event.location %></span>
            <%end%>
          </dd>
        </div>

        <div class="flex items-center col-span-1">
          <dt class="flex items-center space-x-2 text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0 1 18 18.75h-2.25m-7.5-10.5H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V18.75m-7.5-10.5h6.375c.621 0 1.125.504 1.125 1.125v9.375m-8.25-3 1.5 1.5 3-3.75" />
            </svg>
            <span>Description:</span>
          </dt>
        </div>
        <div class="col-span-2">
            <%if event.description.nil? %>
              <dd class="text-gray-900">No description</dd>
            <%else%>
              <div class="bg-gray-100 p-4 rounded mt-2 overflow-auto h-72 relative dark:bg-slate-800 dark:highlight-white/5 ring-1 ring-black/5 rounded-xl flex flex-col divide-y dark:divide-slate-200/5">
                <dd class="text-gray-900"><%= event.description %></dd>
              </div>
            <%end%>
        </div>
      </div>
    </div>

  </main>
</body>