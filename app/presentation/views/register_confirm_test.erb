<div class="row">
  <div class="col-sm-3">
  </div>
  <div class="col-sm-6">
    <form action="/account/<%= registration_token %>" method="post" id="user-form">
      <div class="form-group">
        <div class="row">
          <div class="col-sm-3">Username:</div>
          <div class="col-sm-9">
            <%= new_account['username'] %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-3">Email:</div>
          <div class="col-sm-9">
            <%= new_account['email'] %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-3">
            <label for="password_input">Password:</label>
          </div>
          <div class="col-sm-9">
            <input type="password" name="password" id="password_input">
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-3">
            <label for="password_confirm_input">Re-enter Password:</label>
          </div>
          <div class="col-sm-9">
            <input type="password" name="password_confirm" id="password_confirm_input">
          </div>
        </div>
      </div>
      <button type="submit" id="registration-form-submit" class="btn btn-primary submit" value="submit">submit</button>
    </form>
  </div>
  <div class="col-sm-3">
  </div>
</div>
